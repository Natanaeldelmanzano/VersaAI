# VersaAI Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=VersaAI
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Enterprise AI Chatbot Platform"

# Environment
VITE_NODE_ENV=development

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PWA=false

# External Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# AI Configuration
# Groq API Key for AI chat functionality
# Get your API key from: https://console.groq.com/
VITE_GROQ_API_KEY=your_groq_api_key_here

# AI Chat Configuration
VITE_AI_RESPONSE_TIMEOUT=30000
VITE_CHAT_MESSAGE_LIMIT=1000
VITE_CHAT_HISTORY_LIMIT=100
VITE_DEFAULT_AI_MODEL=mixtral-8x7b-32768

# Development
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Widget Configuration
VITE_WIDGET_DEFAULT_THEME=light
VITE_WIDGET_DEFAULT_POSITION=bottom-right

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Session
VITE_SESSION_TIMEOUT=3600000
VITE_REFRESH_TOKEN_THRESHOLD=300000

# UI Configuration
VITE_DEFAULT_LANGUAGE=es
VITE_SUPPORTED_LANGUAGES=es,en
VITE_DEFAULT_TIMEZONE=America/Mexico_City

# Performance
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_COMPRESSION=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=false